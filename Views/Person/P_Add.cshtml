@model EM_Person

<div class="modal-dialog">
    <div class="modal-content">
        <form asp-action="P_Add" id="form_data" asp-antiforgery="true">
            <div class="modal-header">
                <h4 class="modal-title">Add Person</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="firstName" class="col-md-2 control-label"></label>
                    <input asp-for="firstName" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="lastName" class="col-md-2 control-label"></label>
                    <input asp-for="lastName" class="form-control">
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Person Type</label>
                    <select asp-for="personTypeId" asp-items="ViewBag.PersonTypeId">
                        <option value="">Person Type</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="birthDay" class="col-md-2 control-label"></label>
                    <input asp-for="birthDay" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="gender" class="col-md-2 control-label"></label>
                    <input asp-for="gender" type="radio" value="0" />
                    <label asp-for="gender">Name</label>
                    <input asp-for="gender" type="radio" value="1" />
                    <label asp-for="gender">Nữ</label>

                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Nationality</label>
                    <select asp-for="nationalityId" asp-items="ViewBag.NationalityId" >
                        <option value="">Nationality</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Religion</label>
                    <select asp-for="religionId"  asp-items=" ViewBag.ReligionId">
                        <option value="">Religion</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Folk</label>
                    <select asp-for="folkId" asp-items="ViewBag.FolkId" id="calc_shipping_folk">
                        <option value="">Folk</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="addressId" class="col-md-2 control-label"></label>
                    <input asp-for="addressId" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="phoneNumber" class="col-md-2 control-label"></label>
                    <input asp-for="phoneNumber" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="email" class="col-md-2 control-label"></label>
                    <input asp-for="email" class="form-control">
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" value="Cancel" class="btn btn-outline-secondary waves-effect " onclick="BackToTable('#div_main_table', '#div_view_panel');" />
                <input type="submit" class="btn btn-success" value="Add">
            </div>
        </form>
    </div>
</div>